<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
    <TextView
        android:id="@+id/activity_search_location_lv_item_iv_location_number"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@mipmap/search_location_number_on" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/activity_search_location_lv_item_tv_location_name"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="嘉伦光彩大药房"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/activity_search_location_lv_item_tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="江苏省南京市江宁区"
            android:textSize="10sp"
            android:textColor="@color/colorGrayFont"
            />
    </LinearLayout>
    <ImageView
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/search_location_navigation_icon"/>
    </LinearLayout>
</LinearLayout>