<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayTitleBG"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrayTitleBG"
            android:orientation="vertical">
            <!--标题栏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/colorGrayTitleBG">

                <ImageView
                    android:id="@+id/activity_expert_detail_iv_title_bar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:src="@mipmap/navigation_back" />

                <TextView
                    android:id="@+id/title_bar_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="科普"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/activity_expert_detail_iv_artical_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/title_bar_content"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:src="@mipmap/artical_fav" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="#fafafa"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="34dp"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:src="@mipmap/artical_category_icon" />

                <TextView
                    android:id="@+id/activity_expert_detail_tv_pathemaType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:gravity="center_vertical"
                    android:text="外科"
                    android:textColor="@color/colorMain" />

                <TextView
                    android:id="@+id/activity_expert_detail_tv_subcribelist"
                    android:layout_width="67dp"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/bt_corners"
                    android:gravity="center"
                    android:text="+  订阅"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="4dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="14dp"
                    android:background="@color/colorMain" />

                <TextView
                    android:id="@+id/activity_expert_detail_tv_articalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:text="拔牙之后多久可以镶牙?"
                    android:textColor="@color/colorCancle"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_expert_detail_lv_tv_illness"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/imageView2"
                    android:layout_below="@+id/activity_expert_detail_tv_articalTitle"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/pathematype_corners"
                    android:gravity="center"
                    android:text="外科"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/activity_expert_detail_tv_articalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/activity_expert_detail_lv_tv_illness"
                    android:layout_marginStart="19dp"
                    android:layout_toEndOf="@+id/activity_expert_detail_lv_tv_illness"
                    android:text="2016-05-18" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                >
                <ImageView

                    android:id="@+id/activity_expert_detail_iv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp" />
                <TextView
                    android:layout_marginLeft="14dp"
                    android:id="@+id/activity_expert_detail_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="作者" />

                <RelativeLayout
                    android:id="@+id/activity_expert_detail_layout_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <com.jinke.doctorbear.Utils.CircleImageView
                        android:id="@+id/activity_expert_detail_author_head"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/head"/>
                    <TextView
                        android:id="@+id/activity_expert_detail_author_tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小小飞行家"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorMain"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/activity_expert_detail_author_head" />
                    <TextView
                        android:id="@+id/activity_expert_detail_author_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9B9B9B"
                        android:layout_marginTop="44dp"
                        android:textSize="8sp"
                        android:text="2分钟前"
                        android:layout_alignStart="@+id/activity_expert_detail_author_tv_nickname" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/artical_author_arrow"
                        android:layout_marginEnd="17dp"
                        android:layout_alignBottom="@+id/activity_expert_detail_author_tv_nickname"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="用户评论" />

                <com.jinke.doctorbear.Utils.ScrollListView
                    android:id="@+id/activity_expert_detail_lv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.jinke.doctorbear.Utils.ScrollListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="相关问答" />

                <com.jinke.doctorbear.Utils.ScrollListView
                    android:id="@+id/activity_expert_detail_lv_concerned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"></com.jinke.doctorbear.Utils.ScrollListView>
            </LinearLayout>


            <!--底部编辑栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:background="@color/colorRuleLine"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/activity_expert_detail_layout_social_like"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="6dp"
                        android:src="@mipmap/artical_social_like" />

                    <TextView
                        android:id="@+id/activity_expert_detail_tv_social_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:textColor="@color/colorDetail" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_expert_detail_layout_social_comment"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="6dp"
                        android:src="@mipmap/artical_social_comment" />

                    <TextView
                        android:id="@+id/activity_expert_detail_tv_social_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="233"
                        android:textColor="@color/colorDetail" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_expert_detail_layout_social_report"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="6dp"
                        android:src="@mipmap/artical_social_report" />

                    <TextView
                        android:id="@+id/activity_expert_detail_tv_social_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/colorDetail" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>