<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:weightSum="1"
        android:background="@color/colorGrayTitleBG"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/index_home_right_search"/>
        <EditText
            android:id="@+id/title_search_et_search"
            android:imeOptions="actionSearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="text"
            android:textColor="@color/colorGrayFont"
            android:hint="@string/activityfghomesearch"/>
        <TextView
            android:id="@+id/title_search_tv_cancel"
            android:layout_marginLeft="11dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorMain"
            android:text="@string/activity_fg_home_search_cancle"/>
    </LinearLayout>
</LinearLayout>